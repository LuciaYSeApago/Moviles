<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.pantallapreguntas"
    android:background="@drawable/fondo_preguntas">

    <View
        android:id="@+id/myView"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:background="@drawable/see_through_with_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"/>


    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.16"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tvTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.837"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149"
        app:layout_constraintWidth_percent="0.8" />


    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aquí va la pregunta"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintHeight_max="500dp"
        android:maxLines="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.497"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262"
        app:layout_constraintWidth_percent="0.8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_width="170dp"
        android:layout_height="61dp"
        android:text="⚙ Ajustes"
        android:textColor="@color/rosa_boton_texto"
        android:textSize="20dp"
        app:backgroundTint="@color/rosa_boton"
        app:cornerRadius="10dp"
        app:strokeColor="@color/rosa_boton_borde"
        app:strokeWidth="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="ExtraText"

        app:layout_constraintVertical_bias="0.042"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOption1"
        android:layout_width="313dp"
        android:layout_height="77dp"
        android:text="Opción 1"
        android:textColor="@color/rosa_boton_texto"
        android:textSize="20dp"
        app:backgroundTint="@color/rosa_boton"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/rosa_boton_borde"
        app:strokeWidth="4dp"
        tools:ignore="ExtraText"

        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOption2"
        android:layout_width="313dp"
        android:layout_height="77dp"
        android:text="Opción 2"
        android:textColor="@color/rosa_boton_texto"
        android:textSize="20dp"
        app:backgroundTint="@color/rosa_boton"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/rosa_boton_borde"
        app:strokeWidth="4dp"
        tools:ignore="ExtraText"

        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOption3"
        android:layout_width="313dp"
        android:layout_height="77dp"
        android:text="Opción 3"
        android:textColor="@color/rosa_boton_texto"
        android:textSize="20dp"
        app:backgroundTint="@color/rosa_boton"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/rosa_boton_borde"
        app:strokeWidth="4dp"
        tools:ignore="ExtraText"

        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOption4"
        android:layout_width="313dp"
        android:layout_height="77dp"
        android:text="Opción 4"
        android:textColor="@color/rosa_boton_texto"
        android:textSize="20dp"
        app:backgroundTint="@color/rosa_boton"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/rosa_boton_borde"
        app:strokeWidth="4dp"
        tools:ignore="ExtraText"

        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrevious"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="anterior"
        android:textColor="@color/rosa_boton_texto"
        android:textSize="16dp"
        app:backgroundTint="@color/rosa_boton"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/rosa_boton_borde"
        app:strokeWidth="4dp"
        tools:ignore="ExtraText"

        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="siguiente"
        android:textColor="@color/rosa_boton_texto"
        android:textSize="16dp"
        app:backgroundTint="@color/rosa_boton"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/rosa_boton_borde"
        app:strokeWidth="4dp"
        tools:ignore="ExtraText"

        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"
        />
</androidx.constraintlayout.widget.ConstraintLayout>