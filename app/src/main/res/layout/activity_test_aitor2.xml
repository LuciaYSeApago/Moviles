<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENIDO PRINCIPAL DEL JUEGO -->
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón para abrir el panel -->
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚙ Ajustes" />

        <!-- Tu contenido actual (preguntas, botones, etc.) -->
        <include layout="@layout/activity_test_aitor" />
    </LinearLayout>

    <!-- PANEL DE AJUSTES LATERAL -->
    <LinearLayout
        android:id="@+id/settingsPanel"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚙ Ajustes del juego"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <EditText
            android:id="@+id/etNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"/>

        <Spinner
            android:id="@+id/spCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/categorias"/>

        <Spinner
            android:id="@+id/spDificultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/dificultades"/>

        <SeekBar
            android:id="@+id/seekPreguntas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"/>

        <TextView
            android:id="@+id/tvNumPreguntas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preguntas: 10"/>

        <Switch
            android:id="@+id/switchTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo oscuro"/>

        <Button
            android:id="@+id/btnGuardarAjustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar ajustes"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>